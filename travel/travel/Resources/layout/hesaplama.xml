<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ab"

    >
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/km"
        android:hint="Kaç km gideceksiniz"
        android:layout_marginLeft="50dp"
         android:layout_marginRight="50dp"
          android:layout_marginTop="30dp"
        android:gravity="center"
        />
  
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/litre"
        android:hint="KM de kac yakıyor"
         android:layout_marginLeft="50dp"
         android:layout_marginRight="50dp"
        android:gravity="center"/>
    <Button
        android:text="Hesapla"
        android:layout_width="122.5dp"
        android:layout_height="61.5dp"
        android:id="@+id/hesap"
        android:onClick="calculate"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@android:color/holo_green_dark"
         android:backgroundTint="@color/material_grey_100"    
       />
    <Button
        android:text="Güncel benzin fiyatı"
        android:layout_width="116.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/map"
        android:onClick="click7"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:gravity="center"
        android:textColor="@android:color/holo_green_dark"
         android:backgroundTint="@color/material_grey_100"  
        />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="56.5dp"
        android:id="@+id/textView1"
        android:hint=""
        android:textSize="@dimen/abc_text_size_large_material"
        android:textColor="@android:color/holo_red_dark"
        />

</LinearLayout>
